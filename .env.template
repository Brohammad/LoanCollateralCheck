# Environment Configuration
# Copy this file to .env and fill in your API keys

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_RETRIES=3
GEMINI_TIMEOUT_SECONDS=15

# Database Configuration
SQLITE_DB_PATH=./database/loan_collateral.db
DB_POOL_SIZE=5

# ChromaDB Configuration
CHROMADB_PATH=./data/chromadb
CHROMADB_COLLECTION=loan_documents

# Search Configuration
SERP_API_KEY=your_serpapi_key_here
ENABLE_WEB_SEARCH=false
MAX_SEARCH_RESULTS=5

# RAG Configuration
RAG_TOP_K=5
RAG_MAX_TOKENS=4000
ENABLE_SEARCH_CACHE=true
CACHE_TTL_SECONDS=3600

# Planner-Critique Configuration
MAX_CRITIQUE_ITERATIONS=2
CRITIQUE_ACCEPTANCE_THRESHOLD=0.85
ENABLE_CRITIQUE=true

# Context Management
MAX_HISTORY_ITEMS=5
MAX_HISTORY_TOKENS=2000
CONTEXT_PRUNE_DAYS=30

# Performance Settings
TOKEN_BUDGET_MAX=8000
TARGET_LATENCY_MS=8000
ENABLE_ASYNC=true

# Caching Settings
ENABLE_RESPONSE_CACHE=true
RESPONSE_CACHE_TTL=7200
CACHE_HIT_RATE_TARGET=0.6

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# LangFlow Configuration
LANGFLOW_HOST=0.0.0.0
LANGFLOW_PORT=7860
LANGFLOW_WORKERS=1

# Security
MAX_REQUEST_SIZE_MB=10
RATE_LIMIT_PER_MINUTE=60

# Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL_SECONDS=60
