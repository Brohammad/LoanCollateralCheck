# Production Environment Configuration
# Copy this to .env.production and fill in real values

# CRITICAL: Replace these with real values before deploying!
GOOGLE_API_KEY=your-production-google-api-key-here
SECRET_KEY=your-production-secret-key-min-32-characters-here

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# LLM Configuration
GENERATION_MODEL=gemini-2.0-flash-exp
EMBEDDING_MODEL=text-embedding-004
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=8000
LLM_TOP_P=0.95
LLM_TOP_K=40

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_CONFIDENCE_THRESHOLD=0.7
AGENT_TIMEOUT=120

# Database Configuration
DATABASE_URL=postgresql://aiagent:secure_password@postgres:5432/aiagent_prod
DATABASE_POOL_SIZE=20

# Redis Configuration
REDIS_HOST=ai-agent-redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# API Configuration
API_TITLE=AI Agent System
API_VERSION=1.0.0
API_PREFIX=/api/v1

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE
CORS_ALLOW_HEADERS=*

# Security Configuration
RATE_LIMIT_PER_MINUTE=60
MAX_API_KEY_AGE_DAYS=90
SESSION_TIMEOUT_MINUTES=30
PASSWORD_MIN_LENGTH=12

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
PROMETHEUS_PORT=8000

# Feature Flags
ENABLE_CREDIT_CHECK=true
ENABLE_COLLATERAL_CHECK=true
ENABLE_DOCUMENT_ANALYSIS=true
ENABLE_RAG=true

# Resource Limits
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=300
MAX_UPLOAD_SIZE_MB=50

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
