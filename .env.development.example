# Development Environment Configuration
# Copy this to .env for local development

# Required
GOOGLE_API_KEY=your-dev-google-api-key-here
SECRET_KEY=dev-secret-key-not-for-production-use-only

# Environment
ENVIRONMENT=development
LOG_LEVEL=DEBUG
DEBUG=true

# LLM Configuration
GENERATION_MODEL=gemini-2.0-flash-exp
EMBEDDING_MODEL=text-embedding-004
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000
LLM_TOP_P=0.95
LLM_TOP_K=40

# Agent Configuration
AGENT_MAX_ITERATIONS=5
AGENT_CONFIDENCE_THRESHOLD=0.5
AGENT_TIMEOUT=60

# Database Configuration
DATABASE_URL=sqlite:///./data/dev.db
DATABASE_POOL_SIZE=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# API Configuration
API_TITLE=AI Agent System (Dev)
API_VERSION=1.0.0-dev
API_PREFIX=/api/v1

# CORS Configuration (Allow all for development)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Security Configuration (Relaxed for development)
RATE_LIMIT_PER_MINUTE=1000
MAX_API_KEY_AGE_DAYS=365
SESSION_TIMEOUT_MINUTES=480
PASSWORD_MIN_LENGTH=4

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_PORT=8000

# Feature Flags
ENABLE_CREDIT_CHECK=true
ENABLE_COLLATERAL_CHECK=true
ENABLE_DOCUMENT_ANALYSIS=true
ENABLE_RAG=true

# Resource Limits
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=600
MAX_UPLOAD_SIZE_MB=200

# Logging Configuration
LOG_FORMAT=console
LOG_FILE=/tmp/dev.log
LOG_ROTATION=never
LOG_RETENTION_DAYS=1

# Development Tools
RELOAD=true
HOT_RELOAD=true
PROFILING_ENABLED=true
