# Staging Environment Configuration
# Copy this to .env.staging and fill in real values

# Required
GOOGLE_API_KEY=your-staging-google-api-key-here
SECRET_KEY=your-staging-secret-key-min-32-characters-here

# Environment
ENVIRONMENT=staging
LOG_LEVEL=DEBUG
DEBUG=true

# LLM Configuration
GENERATION_MODEL=gemini-2.0-flash-exp
EMBEDDING_MODEL=text-embedding-004
LLM_TEMPERATURE=0.5
LLM_MAX_TOKENS=8000
LLM_TOP_P=0.95
LLM_TOP_K=40

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_CONFIDENCE_THRESHOLD=0.6
AGENT_TIMEOUT=180

# Database Configuration
DATABASE_URL=postgresql://aiagent:staging_password@postgres:5432/aiagent_staging
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=staging-redis-password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# API Configuration
API_TITLE=AI Agent System (Staging)
API_VERSION=1.0.0-staging
API_PREFIX=/api/v1

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://staging.yourdomain.com,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Security Configuration
RATE_LIMIT_PER_MINUTE=120
MAX_API_KEY_AGE_DAYS=30
SESSION_TIMEOUT_MINUTES=60
PASSWORD_MIN_LENGTH=8

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
PROMETHEUS_PORT=8000

# Feature Flags
ENABLE_CREDIT_CHECK=true
ENABLE_COLLATERAL_CHECK=true
ENABLE_DOCUMENT_ANALYSIS=true
ENABLE_RAG=true

# Resource Limits
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT_SECONDS=300
MAX_UPLOAD_SIZE_MB=100

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=7
